                                                    <Grid ColumnDefinitions="Auto,*">
                                                        <Grid.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="OnToggleRequestHeaders"/>
                                                        </Grid.GestureRecognizers>
                                                        <Label Grid.Column="0"
                                                               Text="{Binding RequestHeadersExpandIcon}"
                                                               FontSize="12"
                                                               FontAttributes="Bold"
                                                               VerticalOptions="Center"
                                                               Margin="0,0,5,0"/>
                                                        <Label Grid.Column="1"
                                                               Text="Headers (JSON)"
                                                               FontSize="12"
                                                               FontAttributes="Bold"
                                                               VerticalOptions="Center"/>
                                                    </Grid>
                                                    <Frame Padding="8"
                                                           BackgroundColor="White"
                                                           CornerRadius="3"
                                                           BorderColor="#007BFF"
                                                           IsVisible="{Binding IsRequestHeadersExpanded}">
                                                        <ScrollView MaximumHeightRequest="300">
                                                            <Label Text="{Binding RequestHeadersJson}"
                                                                   FontSize="11"
                                                                   FontFamily="Courier New"
                                                                   LineBreakMode="CharacterWrap"/>
                                                        </ScrollView>
                                                    </Frame>
                                                </StackLayout>

                                                <!-- Request Body (Expandable) -->
                                                <StackLayout IsVisible="{Binding RequestBodyJson, Converter={StaticResource StringNotEmptyConverter}}">
                                                    <Grid ColumnDefinitions="Auto,*">
                                                        <Grid.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="OnToggleRequestBody"/>
                                                        </Grid.GestureRecognizers>
                                                        <Label Grid.Column="0"
                                                               Text="{Binding RequestBodyExpandIcon}"
                                                               FontSize="12"
