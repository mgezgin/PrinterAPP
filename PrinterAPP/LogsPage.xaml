                                                        <ScrollView MaximumHeightRequest="400">
                                                            <Label Text="{Binding RequestBodyJson}"
                                                                   FontSize="11"
                                                                   FontFamily="Courier New"
                                                                   LineBreakMode="CharacterWrap"/>
                                                        </ScrollView>
                                                    </Frame>
                                                </StackLayout>
                                            </StackLayout>
                                        </StackLayout>
                                    </Frame>

                                    <!-- Response Details Section (Collapsible) -->
                                    <Frame Grid.Row="3"
                                           Padding="10"
                                           Margin="0,10,0,0"
                                           BorderColor="#28A745"
                                           BackgroundColor="#E7F9EC"
