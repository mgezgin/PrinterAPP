                                                       TextColor="#007BFF"
                                                       VerticalOptions="Center"
                                                       Margin="0,0,10,0"/>
                                                <Label Grid.Column="1"
                                                       Text="ðŸ“¤ REQUEST"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="#007BFF"
                                                       VerticalOptions="Center"/>
                                            </Grid>

                                            <!-- Request Details (Expandable) -->
                                            <StackLayout Spacing="5" IsVisible="{Binding IsRequestExpanded}">
                                                <!-- Request URL -->
                                                <Grid ColumnDefinitions="Auto,*"
                                                      IsVisible="{Binding RequestUrl, Converter={StaticResource StringNotEmptyConverter}}">
                                                    <Label Grid.Column="0"
                                                           Text="URL:"
                                                           FontSize="12"
                                                           FontAttributes="Bold"
                                                           WidthRequest="80"/>
                                                    <Label Grid.Column="1"
                                                           Text="{Binding RequestUrl}"
                                                           FontSize="12"
                                                           LineBreakMode="CharacterWrap"/>
                                                </Grid>

                                                <!-- Request Method -->
                                                <Grid ColumnDefinitions="Auto,*"
                                                      IsVisible="{Binding RequestMethod, Converter={StaticResource StringNotEmptyConverter}}">
                                                    <Label Grid.Column="0"
                                                           Text="Method:"
                                                           FontSize="12"
                                                           FontAttributes="Bold"
                                                           WidthRequest="80"/>
                                                    <Label Grid.Column="1"
                                                           Text="{Binding RequestMethod}"
                                                           FontSize="12"/>
