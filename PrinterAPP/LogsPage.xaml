                                                               FontSize="12"
                                                               FontAttributes="Bold"
                                                               VerticalOptions="Center"/>
                                                    </Grid>
                                                    <Frame Padding="8"
                                                           BackgroundColor="White"
                                                           CornerRadius="3"
                                                           BorderColor="#28A745"
                                                           IsVisible="{Binding IsResponseBodyExpanded}">
                                                        <ScrollView MaximumHeightRequest="400">
                                                            <Label Text="{Binding ResponseBodyJson}"
                                                                   FontSize="11"
                                                                   FontFamily="Courier New"
                                                                   LineBreakMode="CharacterWrap"/>
                                                        </ScrollView>
                                                    </Frame>
                                                </StackLayout>
                                            </StackLayout>
                                        </StackLayout>
                                    </Frame>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>

